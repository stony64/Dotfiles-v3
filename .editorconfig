# ------------------------------------------------------------------------------
# FILE:          .editorconfig
# VERSION:       1.3.0
# DESCRIPTION:   EditorConfig f√ºr Dotfiles Framework (Proxmox/Bash/LaTeX/YAML).
# AUTHOR:        Stony64
# ------------------------------------------------------------------------------

root = true

# --- GLOBAL UNIX STANDARDS ----------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# --- MAKEFILES (HEILIGE TABS!) ------------------------------------------------
[{Makefile,makefile}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = false

# --- BASH/SHELL FRAMEWORK (4 SPACES) ------------------------------------------
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Dotfiles Framework + Configs
[{.bash*,.dircolors,.nanorc,.shellcheckrc,dotfilesctl.sh,core.sh}]
indent_style = space
indent_size = 4

# --- MARKDOWN (FREE FORM) -----------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# --- JSON/YAML (2 SPACES JSON-STANDARD) ---------------------------------------
[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# --- WINDOWS FILES -----------------------------------------------------------
[*.{bat,ps1}]
end_of_line = crlf
indent_size = 4

# --- LATEX (2 SPACES) ---------------------------------------------------------
[*.{tex,latex}]
indent_style = space
indent_size = 2

# --- PROXMOX/MC CONFIGS -------------------------------------------------------
[{*.pve,*.conf,mc/ini,pve}]
indent_style = space
indent_size = 4
max_line_length = off

# --- LINTER CONFIGS -----------------------------------------------------------
[{.markdownlint*,.shellcheckrc}]
indent_style = space
indent_size = 4
max_line_length = off

# --- GIT HUB ACTIONS ----------------------------------------------------------
[*.github/workflows/*.yml]
indent_style = space
indent_size = 2

# --- MAKEFILE-GENERATED (NO FORMATTING) ---------------------------------------
[{*.mak,*.mk}]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = false
