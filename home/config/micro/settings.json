{
    "clipboard": "internal",
    "colorscheme": "dracula-tc",
    "indentstyle": "spaces",
    "tabsize": 4,
    "softwrap": true,
    "ruler": true,
    "scrollbar": true,
    "savecursor": true,
    "mkparents": true,
    "infobar": true,
    "filetype": "on",
    "syntax": true,
    "autosave": true,
    "autosaveinterval": 300,
    "cursorline": true,
    "currentlinecolor": "cursorline",
    "dividers": true,
    "icons": true,
    "rmtrailingrs": true,
    "keepautoindent": true,
    "formatoninput": false,
    "statusformat-l": "${filename} %m %y %{.status.git}",
    "statusformat-r": "%c %l %p",
    "diffgutter": true,
    "diffwrapchar": "â•Ž",
    "colors": true,
    "truecolor": true
}
